# Database Configuration (Automatically provided by Replit PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_password
PGDATABASE=your_database_name

# Session Security
SESSION_SECRET=your_random_session_secret_here

# Object Storage (Automatically provided by Replit Object Storage)
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your_bucket_id
PUBLIC_OBJECT_SEARCH_PATHS=/public
PRIVATE_OBJECT_DIR=/.private

# Insightly CRM Integration (Required)
# Get your API key from: https://api.na1.insightly.com/
INSIGHTLY_API_KEY=your_insightly_api_key_here

# Email Service (Optional - for sending quote PDFs)
# Get your API key from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your_brevo_api_key_here